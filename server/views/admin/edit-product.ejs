<%- include('../includes/header.ejs') %>
    <%- include('../includes/navbar.ejs') %>
    <main>
        <form class="product-form" action="/admin/<%= editing ? 'edit' : 'add' %>-product" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) {%><%= product.title %><% } %>"/>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description"><% if(editing) {%><%= product.description %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(editing) {%><%= product.price %><% } %>"/>
            </div>
            <% if(editing) { %>
                <input type="hidden" name="id" value="<%= product.id %>">
           <% } %>
            <button type="submit"><%= editing ? 'Update' : 'Add' %> Product</button>
        </form>
    </main>
<%- include('../includes/footer.ejs') %>